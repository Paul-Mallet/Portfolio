---
import BaseLayout from "../layouts/BaseLayout.astro";
import Frame from "../components/Frame.astro";
import Menu from "../components/Menu.astro";
import DarkMode from "../components/Handwriting/DarkMode.astro";
import Signature from "../components/Handwriting/Signature.astro";
import Sound from "../components/Handwriting/Sound.astro";
import Socials from "../components/Handwriting/Socials.astro";

const pageTitle = "Home";
const width = "50vw";
const height = "66vh";
const frame_tr = "frame_tr";
---

<BaseLayout pageTitle={pageTitle}>
    <Frame width={width} height={height} frame_tr={frame_tr}>
        <h1 style="position: absolute; top: 32px; left: 32px;">Home<span style="color: #de4900;">.</span></h1>
        <Menu />
    </Frame>
    <DarkMode />
    <Signature />
    <Sound />
    <Socials />
</BaseLayout>