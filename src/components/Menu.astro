---
const menu = ["home", "about", "projects", "contact"];
---

<header>
    <nav>
        <ul>
            {menu.map((link) =>
                <li><a href={"/" + (link === "home" ? "" : link)}>{link}</a></li>
            )}
        </ul>
    </nav>
</header>

<style>
    ul
    {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    a
    {
        color: #1a1a1a;
        font-size: 3.2rem;
        font-weight: 800;
        line-height: 2;
        letter-spacing: .2rem;
        text-transform: capitalize;
    }

    a:hover::before
    {
        content: "<";
    }

    a:hover::after
    {
        content: " />";
    }
</style>