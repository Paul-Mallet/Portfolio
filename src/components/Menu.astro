---
const menu = ["about", "projects", "contact"];
---

<nav>
    <ul>
        {menu.map((link) =>
            <li><a href={"/" + (link)}>{link}</a></li>
        )}
    </ul>
</nav>

<style>
    ul
    {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    a
    {
        color: var(--clr-font);
        font-size: 3.2rem;
        font-weight: 800;
        line-height: 2;
        letter-spacing: .2rem;
        text-transform: capitalize;
    }
</style>

<script src="../scripts/menu.js"/>