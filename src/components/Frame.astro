---
const { width } = Astro.props;
const { height } = Astro.props;
const { frame_tr } = Astro.props;
---

<div class="frame_container" transition:name={frame_tr}>
    <slot />
</div>



<style define:vars={{width, height}}>
    .frame_container
    {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: var(--width);
        height: var(--height);
        background: #ecf0f3;
        border: none;
        border-radius: 32px;
        box-shadow: inset 8px 8px 16px rgb(186, 196, 214);
    }
</style>